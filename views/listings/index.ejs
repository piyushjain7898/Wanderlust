<% layout('/layouts/boilerplate') -%>
    <style>
        .filters {
            display: flex;
            flex-wrap: wrap;
            margin-top: 1.4rem;
            align-items: center;
            justify-content: center;
        }

        .filter {
            opacity: 0.7;
            text-align: center;
            margin-right: 1.3rem;
            font-size: 0.8rem;
            
        }

        .filter:hover {
            opacity: 1;
        }

        .tax-info {
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1.2rem;
            padding: 0.7rem 1rem 1rem 1rem;
            display: flex;            
            margin-left: 2.5rem;
            align-items: center;
            height: 2.5rem;
            position: relative;
            top: -0.3rem;
           
        }
    </style>

    <body>
        <!-- <h3>All Listings</h3> -->
        <div class="filters">
            <div class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>rooms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-city"></i>
                <p>Iconic cities</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pool</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-tractor"></i>
                <p>Farms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after tax</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1  mt-3 card-center">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link ">
                    <div class="card listing-card " style="height: 20rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <%=listing.title %>
                                    <br>
                                    &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                                        <i class="tax-info"> &nbsp; &nbsp;+18 % GST</i>
                            </p>

                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>
    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if(info.style.display != "inline") {
                   info.style.display = "inline";
                } else {
                     info.style.display = "none"; 
                }
            }
        })
    </script>